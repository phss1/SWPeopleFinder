@page
@model PersonLookup.Pages.ResultsModel
@{
}

<h1>Results</h1>

<div class="card-deck">
    @foreach (var people in Model.People)
    {
        <div class="card-deck m-3" style="min-width: 18rem">
            <div class="card-header text-center text-wrap">
                <h3>@people.name</h3>
            </div>
            <div class="card-body text-left">
                 Height: @people.height
            </div>
            <div class="card-body text-left">
                 Mass: @people.mass
            </div>
            <div class="card-body text-left">
                 Species: @people.species.First()
            </div>
        </div>
     }
</div>